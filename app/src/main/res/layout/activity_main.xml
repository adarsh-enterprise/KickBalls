<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/buttons_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="1"
        android:layout_margin="20dp"
        android:textColor="#fff" />
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/btn_1"
        android:background="@drawable/new_round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="2"
        android:layout_margin="20dp"
        android:textColor="#556B2F" />
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/btn_2"
        android:gravity="center_vertical|center_horizontal"
        android:text="3"
        android:layout_margin="20dp"
        android:textColor="#fff" />
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/new_round_button"
        android:layout_below="@+id/btn_1"
        android:gravity="center_vertical|center_horizontal"
        android:text="4"
        android:layout_margin="20dp"
        android:textColor="#556B2F"
        />
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:layout_below="@+id/btn_2"
        android:layout_toRightOf="@+id/btn_4"
        android:gravity="center_vertical|center_horizontal"
        android:text="5"
        android:layout_margin="20dp"
        android:textColor="#fff" />
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/new_round_button"
        android:layout_below="@+id/btn_3"
        android:layout_toRightOf="@+id/btn_5"
        android:gravity="center_vertical|center_horizontal"
        android:text="6"
        android:layout_margin="20dp"
        android:textColor="#556B2F" />
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:layout_below="@+id/btn_4"
        android:gravity="center_vertical|center_horizontal"
        android:text="7"
        android:layout_margin="20dp"
        android:textColor="#fff" />
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/new_round_button"
        android:layout_below="@+id/btn_5"
        android:layout_toRightOf="@+id/btn_7"
        android:gravity="center_vertical|center_horizontal"
        android:text="8"
        android:layout_margin="20dp"
        android:textColor="#556B2F" />
    <Button
        android:textSize="25dp"
        android:id="@+id/btn_9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:layout_below="@+id/btn_6"
        android:layout_toRightOf="@+id/btn_8"
        android:gravity="center_vertical|center_horizontal"
        android:text="9"
        android:layout_margin="20dp"
        android:textColor="#fff" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/buttons_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Score - 0"/>
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="RESET"/>
    </RelativeLayout>



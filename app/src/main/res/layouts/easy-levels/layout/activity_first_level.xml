<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_grass"
    tools:context=".easylevels.FirstLevel">

    <RelativeLayout
        android:id="@+id/buttons_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/btn_1"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#556B2F"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/btn_2"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_1"
            android:layout_margin="20dp"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#556B2F"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_2"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/btn_4"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_3"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/btn_5"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#556B2F"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_4"
            android:layout_margin="20dp"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_5"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/btn_7"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#556B2F"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn_6"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/btn_8"
            android:background="@drawable/red_ball"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/texts"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/TransparentGrey"
                android:padding="2sp"
                android:text="@string/white_win"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="@color/lightBlack"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2.0"
                android:text="@string/initial_score"
                android:textColor="@color/lightBlack"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="@color/lightBlack"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2.0"
                android:textColor="@color/lightBlack"
                android:textSize="25sp" />
<!--                android:text="@string/initial_time"-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/start_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texts"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_start"
                style=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/start" />
            <!--            style="?android:attr/borderlessButtonStyle"-->

            <Button
                android:id="@+id/btn_stop"
                style=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/stop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_stop"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_reset"
                style=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/reset" />

            <Button
                android:id="@+id/btn_login"
                style=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="loginFromGame"
                android:text="@string/action_sign_in_short" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

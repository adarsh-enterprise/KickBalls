<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kickballs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/click_balls"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/click_balls"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LevelsListActivity"
            android:label="@string/title_activity_levels_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".SixthLevel" />
        <activity android:name=".FifthLevel" />
        <activity android:name=".FourthLevel" />
        <activity android:name=".ThirdLevel" />
        <activity android:name=".SecondLevel" />
        <activity android:name=".FirstLevel" />
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Register" />
    </application>

</manifest>
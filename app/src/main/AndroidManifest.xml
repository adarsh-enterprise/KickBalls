<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adarsh.kickballs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/click_balls"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/click_balls"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.adarsh.kickballs.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.adarsh.kickballs.FirstActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adarsh.kickballs.FirstActivity" />
        </activity>
        <activity android:name="com.adarsh.kickballs.easylevels.NinthLevel" />
        <activity android:name="com.adarsh.kickballs.easylevels.EighthLevel" />
        <activity android:name="com.adarsh.kickballs.easylevels.SeventhLevel" />
        <activity android:name="com.adarsh.kickballs.hardlevels.HardLevelThree" />
        <activity android:name="com.adarsh.kickballs.hardlevels.HardLevelTwo" />
        <activity android:name="com.adarsh.kickballs.hardlevels.HardLevelOne" />
        <activity android:name="com.adarsh.kickballs.mediumlevels.MediumLevelThree" />
        <activity android:name="com.adarsh.kickballs.mediumlevels.MediumLevelTwo" />
        <activity android:name="com.adarsh.kickballs.mediumlevels.MediumLevelOne" />
        <activity
            android:name="com.adarsh.kickballs.LevelsListActivity"
            android:label="@string/title_activity_levels_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.adarsh.kickballs.easylevels.SixthLevel" />
        <activity android:name="com.adarsh.kickballs.easylevels.FifthLevel" />
        <activity android:name="com.adarsh.kickballs.easylevels.FourthLevel" />
        <activity android:name="com.adarsh.kickballs.easylevels.ThirdLevel" />
        <activity android:name="com.adarsh.kickballs.easylevels.SecondLevel" />
        <activity android:name="com.adarsh.kickballs.easylevels.FirstLevel" />
        <activity android:name="com.adarsh.kickballs.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adarsh.kickballs.ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="com.adarsh.kickballs.FirstActivity" />
        <activity
            android:name="com.adarsh.kickballs.Register"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.adarsh.kickballs.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adarsh.kickballs.MainActivity" />
        </activity>
    </application>

</manifest>